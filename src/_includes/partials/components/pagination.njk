{% set previousChapter = collections['paginated-' + lang] | getPreviousCollectionItem %}
{% set nextChapter = collections['paginated-' + lang] | getNextCollectionItem %}
<nav class="pagination" aria-label="{% __ 'pagination' %}">
    {% if previousChapter %}<a class="standalone" href="{{ previousChapter.url }}">{% includeSvg "previous.svg" %} {% __ 'previous' %}</a>{% endif %}
    {% if nextChapter %}<a class="standalone" href="{{ nextChapter.url }}">{% __ 'next' %} {% includeSvg "next.svg" %}</a>{% endif %}
</nav>
